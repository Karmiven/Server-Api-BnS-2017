<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Redeem Coupon</title>
	<link rel="icon" href="/images/favicon-admin.png" type="image/png">
    <link href="/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/node_modules/@fortawesome/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="/css/coupons.css">
</head>
<body class="bg-light">
<%- include('../partials/nav') %>
    
<div class="container py-4">
    <!-- Breadcrumb -->
	<nav aria-label="breadcrumb" class="custom-breadcrumb generate-breadcrumb shadow-sm d-flex align-items-center">
        <ol class="breadcrumb mb-0 flex-grow-1">
            <li class="breadcrumb-item">
                <a href="/admin/coupons" class="d-flex align-items-center text-decoration-none">
                    <i class="fas fa-ticket-alt me-2"></i>Coupons
                </a>
            </li>
            <li class="breadcrumb-divider">
                <i class="fas fa-chevron-right"></i>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                <i class="fas fa-gift me-2"></i>Redeem Coupon
            </li>
        </ol>
        <div class="breadcrumb-actions">
            <a href="/admin/coupons" class="btn btn-outline-secondary btn-sm">
                <i class="fas fa-arrow-left me-1"></i> Back to Home
            </a>
        </div>
    </nav>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-success py-3">
                    <h5 class="mb-0 text-white d-flex align-items-center">
                        <i class="fas fa-gift me-2"></i> Redeem Coupon
                    </h5>
                </div>
                <div class="card-body">
                    <form id="redeemForm">
                        <div class="mb-3">
                            <label for="couponCode" class="form-label fw-medium">Coupon Code *</label>
                            <input type="text" class="form-control" id="couponCode" name="couponCode" 
                                   placeholder="Enter your coupon code" required>
                            <div class="form-text text-muted">Enter the coupon code you received</div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="userId" class="form-label fw-medium">User ID *</label>
                            <input type="text" class="form-control" id="userId" name="userId" 
                                   placeholder="Enter your User ID (GUID)" required>
                            <div class="form-text text-muted">Your account ID in GUID format</div>
                        </div>
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success py-2">
                                <i class="fas fa-gift me-2"></i> Redeem Coupon
                            </button>
                        </div>
                    </form>
                    
                    <div id="result" class="mt-4" style="display: none;"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/adminFooter') %>
<script src="/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/coupons/redeem-coupon.js"></script>
</body>
</html>